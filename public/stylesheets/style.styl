html,body
  height: 100%
  margin: 0
  padding: 0

body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color: #00B7FF


img.logo
  width: 120px
  color: white
  margin-bottom: 15px

.top
  height:100%
  position: relative
  background-color: #2c8ad1
  color: white
  .row
    margin-bottom: 20px
  .hero
    h4
      font-size: 2rem
      font-family: 'Exo 2', sans-serif
      color: white
      display: inline-block
    span
      font-family: 'Alegreya Sans', sans-serif;
      font-weight: 100;
      font-size: 1.5rem
      margin-left: 10px
  .buttons
    a
      padding-top: 15px;
      padding-bottom: 15px;
      width: 150px;
      font-family: 'Open Sans', sans-serif
    .sign-up
      margin-right: 5px
      color: black
      background-color: #efefef
    .sign-in
      margin-left: 5px
      background-color: #005B7F

.row.more
  margin: 0
  height: 56px
  position: absolute
  bottom: 0
  left: 0
  max-width: 100%
  a
    color: white
    display: block;
    width: 100px;
    margin: 0 auto;
  span
    font-family: 'Alegreya Sans', sans-serif;
    font-weight: 100
    font-size: 1.1rem
    display: block
    margin-bottom: 5px
  i
    font-family: 'FontAwesome';
    font-size: 1.2rem
    font-style: normal !important;


.form
  position:absolute;
  top:50%;
  left: 50%
  height:240px;
  margin-top:-120px;
  margin-left: -170px
  background-color: white
  display: none
  width: 340px
  padding: 10px 20px
  form
    margin: 0
  label
    color: #777;
    text-transform: uppercase
    display: inline-block;
    margin-bottom: 5px;
    font-weight: bold;
    float: left;
    font-size: .75rem
  input, input:focus
    height: auto;
    padding: 10px 0;
    font-size: 1em;
    line-height: 1.7;
    border-radius: 0;
    border: none;
    border-bottom: 1px solid #ddd;
    -webkit-box-shadow: none;
    box-shadow: none;
  button
    margin: 0
    width: 48%
    &.cancel-login, &.cancel-register
      background-color: #dbdbdb
      color: black
      margin-right: 5px;
      float: left
    &.sign-up-submit
      margin-left: 5px;
      float: right
    &.sign-in-submit
      margin-left: 5px;
      float: right

.form-register
  height: 316px

.about
  height: 100%
  position: relative

.row.more footer
  height:50px
  border-top: 1px solid #ddd
  line-height: 50px
  span
    font-family: 'Open Sans', sans-serif
    font-weight: 300
    font-size: .9em
.block
  display: table;
  width: 100%;
  height: 100%

.vcenter
  display: table-cell;
  text-align: center;
  vertical-align: middle;


.move-up {
  transform: translate(0,-130px);
  -webkit-transform: translate(0,-130px);
  -o-transform: translate(0,-130px);
  -moz-transform: translate(0,-130px);
  -webkit-transition-property: -webkit-transform;
  -webkit-transition-duration: 0.7s;
}


.move-down {
  -webkit-transition-property: -webkit-transform;
  -webkit-transition-duration: 0.7s;
}



/** Home **/

nav.top-bar
  height: 50px
  .image-backdrop
    height: 50px;
    width: 50px;
    background-color: #2c8ad1;
    img
      margin: 15px 0 0 9px
      height: 20px;


ul.side-nav
  li
    min-width: 100px
    height: 40px
    border-radius: 3px;
    &.divider
      border-top: 1px solid #ddd
    a
      font-family: 'Open Sans', sans-serif, 'helvetica neue', helvetica;
      font-size: 16px;
      font-weight: 300;
      padding: 7px 0 0 12px
      display: block
      height: 40px
      width: 100%
      color: #398bce !important;
    &.active
      background-color: #dbdbdb

ul.left li h4
    margin: 8px 0 0 11px

h4.depot
  color: white
  font-family: 'Exo 2', sans-serif



.top-bar .name
  height: 50px

.top-bar-section li:not(.has-form) a:not(.button)
  line-height: 50px;

.error-input
  border-bottom: 1px solid #df0000 !important
