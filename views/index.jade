extends layout

block content
  div.top
    div.block.animated.fadeInDown
      div.vcenter
        div.row
          div.column.small-12.small-centered.text-center
            div.intro
              img.logo(src='images/logo-white.png')
              div.row.hero
                div.column.small-12
                  h4.tk-museo-slab Depot.
                  span cloud storage made simple
              div.row.buttons
                div.column.small-12
                  a.sign-up.small.button Sign Up
                  a.sign-in.small.button Sign In

    //- div.row.more
