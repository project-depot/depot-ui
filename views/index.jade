    //-       i.fa-chevron-down
    div.row.more.footer.animated.fadeIn
      div.column.small-12.small-centered.text-center
          footer
            span Made by Team Depot &nbsp;&nbsp;(Zach Latta, Shilpa Yarlagadda, Keshav Varma)&nbsp;&nbsp; at LAUNCH


  div.form.form-login
    form(action='/login', method='post', id="login")
      label Email
      input(type="text", name="username", placeholder="john@doe.com")
      label Password
      input(type="password", name="password", placeholder="●●●●●")
      button.sign-in-submit.small.button(type="submit") Sign In
      button.cancel-login.small.button Cancel

  div.form.form-register
    form(action='/register', method='post', id="register")
      label Email
      input(type="text", name="username", placeholder="john@doe.com")
      label Password
      input(type="password", name="password", placeholder="●●●●●")
      label Confirm Password
      input(type="password", name="password-confirm", placeholder="●●●●●")
      button.sign-up-submit.small.button(type="submit") Sign Up
      button.cancel-register.small.button(type="cancel") Cancel


